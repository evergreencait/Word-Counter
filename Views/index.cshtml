@{
    Layout="Shared/_Layout.cshtml";
}

<form action="/results" method="post">
  <div class="form-group">
    <label for="sentence">Enter your sentence:</label>
    <input type="text" name="sentence" id="sentence" required>
  </div>
  <div class="form-group">
    <label for="word">Enter a word you want to count:</label>
    <input type="text" name="word" id="word" required>
  </div>

  <button type="submit" class="btn btn-warning">Find your word count</button>
</form>
